        {{#if item.sustained}}<p><strong>{{localize "PSYCHIC_POWER.SUSTAINED"}}:</strong> {{item.sustained}}</p>{{/if}}
        {{#if item.psychicType}}<p><strong>{{localize "PSYCHIC_POWER.SUBTYPE"}}:</strong> {{item.psychicType}}</p>{{/if}}
        {{#if item.PsychicPowerZone}}<p><strong>{{localize "PSYCHIC_POWER.ZONE"}}:</strong> {{item.PsychicPowerZone}}</p>{{/if}}
        {{#if item.damage.formula}}<p><strong>{{localize "PSYCHIC_POWER.DAMAGE_FULL"}}:</strong> {{item.damage.formula}}{{#if item.DamageType}} {{item.DamageType}}{{/if}}</p>{{/if}}
        {{#if item.damage.penetration}}<p><strong>{{localize "PSYCHIC_POWER.PENETRATION"}}:</strong> {{item.damage.penetration}}</p>{{/if}}
        {{#if item.damage.special}}<p><strong>{{localize "PSYCHIC_POWER.SPECIAL"}}:</strong> {{item.damage.special}}</p>{{/if}}
        {{#if item.effect}}<p><strong>{{localize "PSYCHIC_POWER.EFFECT"}}:</strong> {{{item.effect}}}</p>{{/if}}
        {{#if item.description}}<p class="description-field"><strong>{{localize "HEADER.DESCRIPTION"}}:</strong> <span class="description-text">{{{nl2br (stripHtmlKeepBreaks item.description)}}}</span></p>{{/if}}
        {{/if}}

        {{#if item.isSpecialAbility}}
        {{#if item.benefit}}<p><strong>{{localize "SPECIAL_ABILITY.BENEFIT"}}:</strong> {{item.benefit}}</p>{{/if}}
        {{#if item.description}}<p class="description-field"><strong>{{localize "HEADER.DESCRIPTION"}}:</strong> <span class="description-text">{{{nl2br (stripHtmlKeepBreaks item.description)}}}</span></p>{{/if}}
        {{/if}}

        {{#if item.isTalent}}
        {{#if item.prerequisites}}<p><strong>{{localize "TALENT.PREREQUISITES"}}:</strong> {{item.prerequisites}}</p>{{/if}}
        {{#if item.aptitudes}}<p><strong>{{localize "TALENT.APTITUDES"}}:</strong> {{item.aptitudes}}</p>{{/if}}
        {{#if item.tier}}<p><strong>{{localize "TALENT.TIER"}}:</strong> {{item.tier}}</p>{{/if}}
        {{#if item.description}}<p class="description-field"><strong>{{localize "HEADER.DESCRIPTION"}}:</strong> <span class="description-text">{{{nl2br (stripHtmlKeepBreaks item.description)}}}</span></p>{{/if}}
        {{/if}}

        {{#if item.isTool}}
        {{#if item.description}}<p class="description-field"><strong>{{localize "HEADER.DESCRIPTION"}}:</strong> <span class="description-text">{{{nl2br (stripHtmlKeepBreaks item.description)}}}</span></p>{{/if}}
        {{#if item.weight}}<p><strong>{{localize "TOOL.WEIGHT"}}:</strong> {{item.weight}}</p>{{/if}}
        {{#if item.Craftsmanship}}<p><strong>{{localize "TOOL.CRAFTSMANSHIP"}}:</strong> {{item.Craftsmanship}}</p>{{/if}}
        {{#if item.Availability}}<p><strong>{{localize "TOOL.AVAILABILITY"}}:</strong> {{item.Availability}}</p>{{/if}}
        {{/if}}

        {{#if item.isTrait}}
        {{#if item.benefit}}<p><strong>{{localize "TRAIT.BENEFIT"}}:</strong> {{item.benefit}}</p>{{/if}}
        {{#if item.description}}<p class="description-field"><strong>{{localize "HEADER.DESCRIPTION"}}:</strong> <span class="description-text">{{{nl2br (stripHtmlKeepBreaks item.description)}}}</span></p>{{/if}}
        {{/if}}

        {{#if item.isWeapon}}
        {{#if item.WeaponClass}}<p><strong>{{localize "WEAPON.CLASS"}}:</strong> {{item.WeaponClass}}</p>{{/if}}
        {{#if item.range}}<p><strong>{{localize "WEAPON.RANGE"}}:</strong> {{item.range}}</p>{{/if}}
        {{#if item.RateOfFire}}<p><strong>{{localize "WEAPON.RATE_OF_FIRE_FULL"}}:</strong> {{item.RateOfFire}}</p>{{/if}}
        {{#if item.damage}}<p><strong>{{localize "WEAPON.DAMAGE_FULL"}}:</strong> {{item.damage}}{{#if item.DamageType}} {{item.DamageType}}{{/if}}</p>{{/if}}
        {{#if item.penetration}}<p><strong>{{localize "WEAPON.PENETRATION_FULL"}}:</strong> {{item.penetration}}</p>{{/if}}
        {{#if item.Clip}}<p><strong>{{localize "WEAPON.CLIP"}}:</strong> {{item.Clip}}</p>{{/if}}
        {{#if item.reload}}<p><strong>{{localize "WEAPON.RELOAD_FULL"}}:</strong> {{item.reload}}</p>{{/if}}
        {{#if item.special}}<p><strong>{{localize "WEAPON.SPECIAL"}}:</strong> {{item.special}}</p>{{/if}}
        {{#if item.description}}<p class="description-field"><strong>{{localize "HEADER.DESCRIPTION"}}:</strong> <span class="description-text">{{{nl2br (stripHtmlKeepBreaks item.description)}}}</span></p>{{/if}}
        {{#if item.weight}}<p><strong>{{localize "WEAPON.WEIGHT"}}:</strong> {{item.weight}}</p>{{/if}}
        {{#if item.Craftsmanship}}<p><strong>{{localize "WEAPON.CRAFTSMANSHIP"}}:</strong> {{item.Craftsmanship}}</p>{{/if}}
        {{#if item.Availability}}<p><strong>{{localize "WEAPON.AVAILABILITY"}}:</strong> {{item.Availability}}</p>{{/if}}
        {{/if}}

        {{#if item.isWeaponModification}}
        {{#if item.upgrades}}<p><strong>{{localize "WEAPON_MODIFICATION.UPGRADES"}}:</strong> {{item.upgrades}}</p>{{/if}}
        {{#if item.description}}<p class="description-field"><strong>{{localize "HEADER.DESCRIPTION"}}:</strong> <span class="description-text">{{{nl2br (stripHtmlKeepBreaks item.description)}}}</span></p>{{/if}}
        {{#if item.weight}}<p><strong>{{localize "WEAPON_MODIFICATION.WEIGHT"}}:</strong> {{item.weight}}</p>{{/if}}
        {{#if item.Craftsmanship}}<p><strong>{{localize "WEAPON_MODIFICATION.CRAFTSMANSHIP"}}:</strong> {{item.Craftsmanship}}</p>{{/if}}
        {{#if item.Availability}}<p><strong>{{localize "WEAPON_MODIFICATION.AVAILABILITY"}}:</strong> {{item.Availability}}</p>{{/if}}
        {{/if}}

        {{#if item.isAptitude}}
        {{#if item.description}}<p class="description-field"><strong>{{localize "HEADER.DESCRIPTION"}}:</strong> <span class="description-text">{{{nl2br (stripHtmlKeepBreaks item.description)}}}</span></p>{{/if}}
        {{/if}}
    </div>
</div>

